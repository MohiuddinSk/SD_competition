<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 15

        Label:
            text: "Welcome, " + root.user_name
            font_size: 24
            color: 0, 0.5, 0.8, 1

        Button:
            text: "Book Train"
            size_hint_y: None
            height: 50
            background_color: 0.3, 0.6, 1, 1

        Button:
            text: "Book Bus"
            size_hint_y: None
            height: 50
            background_color: 0.2, 0.7, 0.9, 1

        Button:
            text: "Book Flight"
            size_hint_y: None
            height: 50
            background_color: 0.1, 0.6, 0.8, 1

        Button:
            text: "Book Cab"
            size_hint_y: None
            height: 50
            background_color: 0.6, 0.7, 0.2, 1

        Button:
            text: "Book Hotel"
            size_hint_y: None
            height: 50
            background_color: 0.7, 0.3, 0.6, 1

        Button:
            text: "AI Travel Planner"
            size_hint_y: None
            height: 50
            background_color: 0.9, 0.5, 0.2, 1

        Button:
            text: "Logout"
            size_hint_y: None
            height: 50
            on_press: root.logout()
            background_color: 1, 0.2, 0.2, 1
