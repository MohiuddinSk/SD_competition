<BookFlightScreen>:
    from_input: from_input
    to_input: to_input
    date_input: date_input
    seats_input: seats_input
    class_input: class_input

    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 15

        Label:
            text: "✈️ Book Flight Ticket"
            font_size: 24
            bold: True

        TextInput:
            id: from_input
            hint_text: "From Airport"

        TextInput:
            id: to_input
            hint_text: "To Airport"

        TextInput:
            id: date_input
            hint_text: "Journey Date (YYYY-MM-DD)"

        TextInput:
            id: seats_input
            hint_text: "Number of Seats"

        TextInput:
            id: class_input
            hint_text: "Class (Economy/Business)"

        Button:
            text: "Submit Booking"
            on_press: root.submit_booking()

        Button:
            text: "Back"
            on_press: app.root.current = 'dashboard'
